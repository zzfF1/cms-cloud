<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.system.mapper.SysLogininforMapper">

    <resultMap type="com.sinosoft.system.domain.vo.SysLogininfoStatisticVo" id="SysLogininfoStatisticResult">
        <id property="code" column="code"/>
        <id property="value" column="value"/>
    </resultMap>

    <select id="logininfoStatistic" resultMap="SysLogininfoStatisticResult">
        select a.status as "code",count(1) as "value"
        from sys_logininfor a
        where a.login_time between #{params.beginTime} and #{params.endTime}
        <if test="userName !=null and userName !='' ">
            and a.user_name = #{userName}
        </if>
        group by a.status
    </select>

</mapper>
