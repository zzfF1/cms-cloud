<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.system.mapper.SysUserPwdExpireMapper">
    <resultMap id="SysUserPwdExpireResult" type="com.sinosoft.system.domain.SysUserPwdExpire">
        <id property="userId" column="user_id"/>
        <result property="startTime" column="start_time"/>
        <result property="expireTime" column="expire_time"/>
        <result property="updateTimes" column="update_times"/>
        <result property="warningFlag" column="warning_flag"/>
        <result property="warningTime" column="warning_time"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 查询所有过期的密码记录 -->
    <select id="selectExpiredPasswords" resultMap="SysUserPwdExpireResult">
        SELECT *
        FROM sys_user_pwd_expire
        WHERE status = '0'
          AND expire_time IS NOT NULL
          AND expire_time &lt; #{currentTime}
    </select>

    <!-- 查询即将过期的密码记录 -->
    <select id="selectSoonToExpirePasswords" resultMap="SysUserPwdExpireResult">
        SELECT a.*
        FROM sys_user_pwd_expire a
        WHERE a.status = '0'
          AND a.warning_flag = '0'
          AND a.expire_time IS NOT NULL
          AND a.expire_time BETWEEN #{currentTime} AND #{warningTime}
    </select>

    <!-- 批量更新过期状态 -->
    <update id="batchUpdateExpiredStatus">
        UPDATE sys_user_pwd_expire
        SET status = '1',
        update_time = #{updateTime}
        WHERE user_id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </update>

    <!-- 批量更新警告标志 -->
    <update id="batchUpdateWarningFlag">
        UPDATE sys_user_pwd_expire
        SET warning_flag = '1',
        warning_time = #{warningTime},
        update_time = #{updateTime}
        WHERE user_id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </update>
</mapper>
